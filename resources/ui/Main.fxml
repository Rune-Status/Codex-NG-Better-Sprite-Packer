<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" onMouseDragged="#handleMouseDragged" onMousePressed="#handleMousePressed" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.creativelab.Controller">
   <left>
      <VBox alignment="CENTER" BorderPane.alignment="TOP_CENTER">
         <children>
            <TreeView fx:id="treeView">
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#addSprite" text="Add" />
                        <MenuItem mnemonicParsing="false" onAction="#replaceSprite" text="Replace" />
                        <MenuItem mnemonicParsing="false" onAction="#removeSprite" text="Remove" />
                      <MenuItem fx:id="dumpSpriteMI" mnemonicParsing="false" onAction="#dumpSprite" text="Dump" />
                        <MenuItem fx:id="dumpAllSpritesMI" mnemonicParsing="false" onAction="#dumpSprites" text="Dump All" />
                        <MenuItem fx:id="viewDirectoryMI" mnemonicParsing="false" onAction="#viewCurrentDirectory" text="View Directory" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TreeView>
            <TextField fx:id="searchTf" alignment="CENTER" promptText="Search..." style="-fx-background-image: url('images/search_icon.png');; -fx-background-repeat: no-repeat; -fx-background-position: left center;">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </VBox.margin>
               <tooltip>
                  <Tooltip text="Use this to search for a sprite by its name or id" />
               </tooltip>
            </TextField>
         </children>
      </VBox>
   </left>
   <top>
      <VBox>
         <children>
            <StackPane>
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label fx:id="titleLbl" text="Better Sprite Packer" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button fx:id="minBtn" mnemonicParsing="false" onAction="#minimizeProgram" prefHeight="20.0" prefWidth="45.0">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="maxBtn" mnemonicParsing="false" prefHeight="20.0" prefWidth="45.0">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="closeBtn" mnemonicParsing="false" onAction="#closeProgram" prefHeight="20.0" prefWidth="45.0">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </StackPane>
            <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="loadArchiveBtn" mnemonicParsing="false" onAction="#unpackArchive" text="Unpack">
                     <tooltip>
                        <Tooltip text="Use this button to load your sprites from the sprites archive" />
                     </tooltip>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="writeSpriteBtn" mnemonicParsing="false" onAction="#buildCache" text="Build">
                     <tooltip>
                        <Tooltip text="Use this button to pack the sprites" />
                     </tooltip>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="loadSpriteBtn" mnemonicParsing="false" onAction="#loadFromDirectory" text="Load">
                     <tooltip>
                        <Tooltip text="Use this button to load actual images" />
                     </tooltip>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="dumpSpriteBtn" mnemonicParsing="false" onAction="#dumpSprites" text="Dump">
                     <tooltip>
                        <Tooltip text="Use this button to save all of your sprites to a directory" />
                     </tooltip>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#clearEditor" text="Clear">
                     <tooltip>
                        <Tooltip text="Use this button to clear this editor" />
                     </tooltip>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <ColorPicker fx:id="colorPicker">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                     <tooltip>
                        <Tooltip text="Use this to change the background color of your sprites" />
                     </tooltip>
                  </ColorPicker>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="rightVBox" alignment="TOP_CENTER" minWidth="-Infinity" BorderPane.alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <TitledPane minHeight="-Infinity" text="Information" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                     <content>
                        <HBox>
                           <children>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <TextField fx:id="nameTf" alignment="CENTER" onKeyPressed="#handleKeyEventPressed" promptText="Name">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" />
                                       </VBox.margin>
                                       <tooltip>
                                          <Tooltip text="This is the actual sprites name, whatever you set it to be" />
                                       </tooltip>
                                    </TextField>
                                    <TextField fx:id="widthTf" alignment="CENTER" editable="false" onKeyPressed="#handleKeyEventPressed" promptText="Width">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" />
                                       </VBox.margin>
                                       <tooltip>
                                          <Tooltip text="This is the sprites actual width" />
                                       </tooltip>
                                    </TextField>
                                    <TextField fx:id="offsetXTf" alignment="CENTER" onKeyPressed="#handleKeyEventPressed" promptText="OffsetX">
                                       <VBox.margin>
                                          <Insets bottom="5.0" left="5.0" right="5.0" />
                                       </VBox.margin>
                                       <tooltip>
                                          <Tooltip text="This is the sprites horizontal offset from the center of the image" />
                                       </tooltip>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <TextField fx:id="indexTf" alignment="CENTER" editable="false" onKeyPressed="#handleKeyEventPressed" promptText="Index">
                                       <VBox.margin>
                                          <Insets bottom="5.0" right="5.0" />
                                       </VBox.margin>
                                       <tooltip>
                                          <Tooltip text="This is the sprites unique id, no two sprites should have the same id" />
                                       </tooltip>
                                    </TextField>
                                    <TextField fx:id="heightTf" alignment="CENTER" editable="false" onKeyPressed="#handleKeyEventPressed" promptText="Height">
                                       <VBox.margin>
                                          <Insets bottom="5.0" right="5.0" />
                                       </VBox.margin>
                                       <tooltip>
                                          <Tooltip text="This is the sprites actual height" />
                                       </tooltip>
                                    </TextField>
                                    <TextField fx:id="offsetYTf" alignment="CENTER" onKeyPressed="#handleKeyEventPressed" promptText="OffsetY">
                                       <VBox.margin>
                                          <Insets bottom="5.0" right="5.0" />
                                       </VBox.margin>
                                       <tooltip>
                                          <Tooltip text="This is the sprites vertical offset from the center of the image" />
                                       </tooltip>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </content>
                  </TitledPane>
                  <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" prefViewportWidth="345.0" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox alignment="CENTER">
                           <children>
                              <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </VBox>
                     </content>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </VBox.margin>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
